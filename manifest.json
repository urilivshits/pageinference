{
  "manifest_version": 3,
  "name": "Iuliia's Lil Helper",
  "version": "1.0.0",
  "description": "AI assistant for web pages",
  "icons": {
    "16": "icons/default_icon16.png",
    "48": "icons/default_icon48.png",
    "128": "icons/default_icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/default_icon16.png",
      "48": "icons/default_icon48.png",
      "128": "icons/default_icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["module-loader.js"]
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.openai.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/*.js",
        "content/scrapers/*.js",
        "shared/*.js",
        "shared/utils/*.js",
        "shared/models/*.js",
        "shared/prompts/*.js",
        "lib/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "run-page-inference": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Run inference on the current page using the last query"
    }
  }
} 