{
  "manifest_version": 3,
  "name": "Talk to any webpage",
  "description": "Scrape web page content and answer questions using OpenAI inference",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/default_icon16.png",
      "48": "icons/default_icon48.png",
      "128": "icons/default_icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "windows"
  ],
  "host_permissions": [
    "https://*.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/default_icon16.png",
    "48": "icons/default_icon48.png",
    "128": "icons/default_icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "run-page-inference": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Run page inference with last input or open popup"
    }
  }
} 